default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Fetch certificates and provisioning profiles using match
    match(type: "appstore")  # Fetch app store provisioning profile and certificate
    increment_build_number(xcodeproj: "Xcode Demo.xcodeproj")  # Increment build number
    build_app(scheme: "Xcode Demo")  # Build the app
    upload_to_testflight(username: 'vashistha.shaswat@thinksys.com')
    #upload_to_testflight  # Upload the app to TestFlight
  end
end

